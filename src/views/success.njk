{% extends "_base.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set successHtml %}
  Your registration number is<br><strong>{{model.regNo}}</strong><br><br>
  {% if model.expiryDate %}
    Expiry date<br><strong>{{model.expiryDate}}</strong>
  {% endif %}
{% endset %}

{% block content %}

  {% if not model.alreadyReceivedApplication %}

    {{ govukPanel({
      titleText: "Registration complete",
      html: successHtml
    }) }}

  {% endif %}

  {% if model.alreadyReceivedApplication %}

    {{ govukPanel({
      titleText: "Registration complete"
    }) }}

  {% endif %}

  <p class="govuk-body">We've sent you a confirmation email with details of your registration.</p>

  <h2 class="govuk-heading-m">What happens next</h2>

  <p class="govuk-body">You must understand and comply with the terms and conditions attached to the General Licences.</p>

  <p class="govuk-body">You must submit an annual return on or before 31 January each year if you have registered to use meat-baits.</p>

  <h3 class="govuk-heading-s">Email</h3>

  <ul class="govuk-list">
    <li>
      <a class="govuk-link" href="mailto:licensing@nature.scot">licensing@nature.scot</a>
    </li>
    <li>
      We aim to respond within 2 working days.
    </li>
  </ul>

  <h3 class="govuk-heading-s">Telephone</h3>

  <ul class="govuk-list">
    <li>
      01463 725 364
    </li>
    <li>
      Voicemail service. We aim to respond within 2 working days.
    </li>
  </ul>

  <p class="govuk-body">
    <a class="govuk-link" href="https://www.gov.uk/call-charges" target="_blank">Find out about call charges</a>
  </p>
{% endblock %}
