{
  "name": "trap-registration",
  "version": "1.1.0",
  "description": "Register to use traps under General Licences",
  "author": "Mike Coats <mike.coats@nature.scot>",
  "repository": "github:Scottish-Natural-Heritage/trap-registration",
  "license": "(MIT OR OGL-UK-3.0 OR Apache-2.0)",
  "type": "module",
  "scripts": {
    "lint": "xo",
    "scss": "node --experimental-modules src/scss.js",
    "assets": "cp node_modules/naturescot-frontend/naturescot/assets/images/naturescot-logo.png dist/ && cp -R src/assets/* dist/",
    "postassets": "node --experimental-modules src/post-assets.js",
    "build": "npm run scss && npm run assets",
    "prestart": "npm run build",
    "start": "node --experimental-modules src/server.js",
    "start:dev": "COOKIE_PREFIX=_ node --experimental-modules src/server.js",
    "start:mock": "node src/server-mock.js",
    "dev": "TR_PORT=3999 COOKIE_PREFIX=_ nodemon --exec \"npm run lint && npm run start\" -e js,njk,scss --ignore dist/ --ignore cypress/",
    "cy:run": "cypress run",
    "test": "TR_PORT=3000 TR_TEST=true COOKIE_PREFIX=_ PC_LOOKUP_API_URL=http://mock-gazetteer-api/endpoint start-server-and-test start:mock http://localhost:3000/trap-registration/health cy:run",
    "cy:open": "cypress open"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "govuk-frontend": "3.6.0",
    "jimp": "^0.13.0",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.4",
    "memorystore": "^1.6.2",
    "morgan": "^1.10.0",
    "naturescot-frontend": "^2.0.2",
    "naturescot-utils": "^1.2.0",
    "node-sass-package-importer": "^5.3.3",
    "nunjucks": "^3.2.3",
    "sass": "^1.77.5",
    "winston": "^3.8.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.5.4",
    "axios-mock-adapter": "^1.21.2",
    "cypress": "^13.11.0",
    "eslint-plugin-cypress": "^2.11.2",
    "nodemon": "^3.1.0",
    "prettier": "^2.0.5",
    "start-server-and-test": "^2.0.3",
    "xo": "^0.58.0"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "plugins": [
      "cypress"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": 8
    },
    "rules": {
      "import/extensions": 0,
      "new-cap": 0,
      "n/prefer-global/process": [
        "error",
        "always"
      ]
    },
    "env": [
      "browser",
      "node",
      "cypress/globals"
    ]
  },
  "extends": [
    "eslint:recommended",
    "plugin:n/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": false,
    "trailingComma": "none"
  }
}
